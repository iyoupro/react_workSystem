.wrapper {
  padding: 0 24px;
  box-sizing: border-box;
  width: 100%;
  background: white;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
  transition: transform 0.5s ease, max-height 0.5s ease, opacity 0.5s ease, box-shadow 0.3s ease;
  transform: scaleY(1);
  cursor: pointer;
  & .required{
    position: absolute;
    left: 8px;
    color: red;
    font-size: 24px;
    padding: 24px 4px 0 0;
  };
  & .requiredSelected{
    position: absolute;
    left: 8px;
    color: red;
    top:0;
    font-size: 24px;
    padding: 24px 4px 0 0;
  };
  &.delete {
    transform: scaleY(0);
    opacity: 0;
    max-height: 0 !important;
  };
  &.isSelected {
    cursor: default;
    box-shadow: 0px 0px 14px 0px rgba(0, 0, 0, 0.4), 2px 2px 9px 0px rgba(0, 0, 0, 0.4);
    z-index: 2;
    & > .footer {
      transform: scaleY(1);
      opacity: 1;
      height: 40px;
      & .deleteIcon, .cloneIcon {
        display: block;
      }
    }
  };
  & .title {
    text-indent: 4px;
    width: 80%;
    height:36px;
    margin-top: 24px;
    font-size: 28px;
    & .titleInput {
      bottom: 16%;
      font-size: 24px;
    }
  };

  & .typeSelect{
    width: 16%;
    height: 36px;
    margin-left: 2%;
    margin-top: 24px;
  };
  & .declaraction {
    width: 98%;
    height:36px;
    margin-bottom: 24px;
    font-size: 24px;
    & .declaractionInput {
      font-size: 24px;
    }
  };
  & > .horizontalLine{
    border: none;
    margin-top:12px;
    height: 1px;
    width: 99%;
    background-color: #d9d9d9;
  };
  & > .footer {
    width: 100%;    
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    transition: height 0.15s ease, transform 0.15s ease, opacity 0.3s ease;
    opacity: 0;
    height: 0px;
    transform: scaleY(0);
    margin-bottom: 24px;
    & > .footerItem{
      margin-right: 1.5%;
      cursor: pointer;
    }
    & .deleteIcon, .cloneIcon {
      display: none;
    }
  } 
}

