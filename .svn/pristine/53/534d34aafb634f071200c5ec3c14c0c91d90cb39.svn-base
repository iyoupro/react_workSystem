
.item {
  // border:1px solid red;
  // overflow: hidden;
  border-radius:6px;
  width: 164px;
  height: 128px;
  color: white;
  background: grey;
  position: relative;
  z-index:5;
  // border:1px solid red;
  & .iconColumn {
    z-index: 3;
    font-size: 24px;
    position: absolute;
    margin: auto;
    color: #40a9ff;
    font-size: 20px;
    right: 0;
    bottom: 42%;
    transition: font-size 0.2s ease;
    &:hover {
      font-size: 24px;
      cursor: pointer;
      color: #40a9ff;
    }
  }
  & .iconRow {
    z-index: 3;
    font-size: 24px;
    position: absolute;
    margin: auto;
    color: #40a9ff;
    font-size: 20px;
    left: 50%;
    bottom: 0;
    transform: translate(-50%, 0);
    transition: font-size 0.2s ease;
    &:hover {
      font-size: 24px;
      cursor: pointer;
      color: #40a9ff;
    }
  }

  .department{
    margin:0px auto;
    border-top-left-radius:6px;
    border-top-right-radius:6px;
    width: 164px;
    height: 28px;
    line-height: 28px;
    background-color:#40a9ff;
    transition:background-color  1s;
    -moz-transition:background-color 1s; /* Firefox 4 */
    -webkit-transition:background-color 1s; /* Safari and Chrome */
    -o-transition:background-color 1s; /* Opera */
    color:white;
    text-align:center;
    &:hover{
      background-color: #69c0ff;
    }
  }
  
  .info{
    margin:0 auto;
    border:1px solid #40a9ff;
    border-bottom-left-radius:6px;
    border-bottom-right-radius:6px;
    width: 164px;
    height: 100px;
    background:white;
    color:black;
    text-align:center;
    transition:border  1s, height  0.3s;
    -moz-transition:border 1s, height  0.3s; /* Firefox 4 */
    -webkit-transition:border 1s, height  0.3s; /* Safari and Chrome */
    -o-transition:border 1s, height  0.3s; /* Opera */
  }

  & .popupRow{
    margin:0px auto;
    margin-top:-28px;  
    color:white;
    z-index:2;
    width: 164px;
    height: 28px;
    background-color:transparent;
    transition:background-color  0.7s;
    -moz-transition:background-color 0.7s; /* Firefox 4 */
    -webkit-transition:background-color 0.7s; /* Safari and Chrome */
    -o-transition:background-color 0.7s; /* Opera */
    border-bottom-left-radius:6px;
    border-bottom-right-radius:6px;  
    display:flex;
    justify-content:space-between;
    align-items: center;
    position: relative;
    padding:0 8px;
    &:hover{
      background-color:#8c8c8c;
    }
    .plus{
      margin: 0px;
      color:white;
      font-size:22px;
      height: 36px;
      width: 40px;
      text-align: center;
      &:hover{
        cursor:pointer;
      }
    }
    & .popupAttr{
      border-radius: 6px;
      position: absolute;
      z-index:10000; 
      top: 28px;
      left: 0px;
      width: 100%;
      background: white;
      box-shadow: 0 0 2px 1px #bfbfbf;
      padding: 4px 0px;
      color: black;
      visibility: hidden;  
      & .popupAttrMenu{
      // z-index:10000; 
      position: relative;
      text-indent: 12px;
      color: #595959;
      font-size: 13px;
      line-height: 30px;
        &:hover{
          background: #e6f7ff;
        }
      }
    }
    .add{
      // top:-70px;
      top:32px;
    }
    .modify{
      // top:-100px;
      top:32px;
    }
  }

}