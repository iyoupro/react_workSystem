.wrapper {
  padding: 1px;
  position: relative;
  & > .input {
    width: 100%;
    height: 100%;
    padding: 0;
    background: transparent;
    border: none;
    &:focus {
      padding: 0;
      box-shadow: none;
    };
  };
  & > .underline {
    width: 100%;
    height: 0;
    border: 0;
    border-top: 1px dashed grey;
    background-color: transparent;
    position: absolute;
    top: calc(~'90%');
    &.focusUnderLine {
      height: 2px;
      border-top: 0;
      background:#2db7f5;
      transition: all 0.66s ease;
      opacity: 0;
      transform: scale(0) translateY(-50%);
      &.focus {
        opacity: 1;
        transform: scale(1) translateY(-50%);
      };
    };
  };
  & > .widthCal {
    top: 0;
    position: absolute;
    white-space:nowrap;
    visibility: hidden;
  };
};