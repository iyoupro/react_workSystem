

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 12px 24px;
  width: calc(~"100% - 48px");
  border-bottom: 1px solid #d9d9d9;
	font-size: 16px;
  font-weight: normal;
  text-align: center;  
  color: #333;

  & > .score {
    font-size: 24px;
    font-weight: 600;
    color: #ffc540;
    
    & span{
      font-size: 14px;
      font-weight: normal;
      margin-left:2px;
    };
  };
};