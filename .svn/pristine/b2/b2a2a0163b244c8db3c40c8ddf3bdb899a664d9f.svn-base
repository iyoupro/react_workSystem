.ruleWrapper {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  position: relative;
  width: calc(~"100% - 48px - 12px");
  height: 50px;
  background: #fafafa;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  margin: 10px 4px 10px 48px;
  padding-left: 4px;
  &:hover {
    & > .deleteIcon > .button {
      opacity: 1;
    };
  };
  & > .deleteIcon{
    position: absolute;
    right: 8px; 
    & > .button {
      transition: opacity 0.6s ease;
      border: 0px;
      opacity: 0;
      background: #fafafa;
    }  ;
  };
}