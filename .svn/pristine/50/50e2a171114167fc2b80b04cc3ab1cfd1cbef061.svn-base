.wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 8px;
  & > .header {
    width: 100%;
    height: 100px;
    padding: 20px;
    box-sizing:border-box;
    background: #722ed1;
    box-shadow: -1px -1px 7px 0px #000;
    z-index: 20;
    overflow: hidden;
    & .title {
      font-size: 28px;
      margin-left: 10%;
      & .titleInput {
        color: white;
        font-size: 28px;
        font-weight: 600;
      }
      & .titleFocusUnderline {
        background: white;
      };
    };
  };
  & > .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    bottom: 0px;
    padding-bottom: 120px;
    background: #f5f5f5;
  };
  & > .affix {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 30%;
    right: calc(~"20% - 80px");
    width: 45px;
    height: 90px;
    border-radius: 4px;
    background: white;
    box-shadow: 0px 0px 5px 0.5px grey;
    & button {
      margin: 5px;
    }
  }
  & > .toTop {
    position: fixed;
    bottom: 20px;
    right: 40px
  }
}
