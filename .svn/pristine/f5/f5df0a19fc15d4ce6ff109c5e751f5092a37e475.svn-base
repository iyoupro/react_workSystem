.wrapper{
  border: 1px solid #d9d9d9;
  margin: auto;
  width: fit-content;
  height: fit-content;
  position: relative;
  border-radius: 4px;
  .action{
    position: absolute;
    top: 8px;
    right: 8px;
    line-height:26px;
    height:26px;
    width:30px;
    padding:0;
    text-align:center;
  }
}