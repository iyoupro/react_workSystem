.evalItem{
  font-size: 16px;
  margin-bottom: 32px;
  margin-top: 24px;
}


.addOption{
  margin-top:16px;
}


.optionItem{
  margin-top: 12px;
}

.footer{
  float: right;
  margin: 32px 0;
}


.cancel{
  margin-right: 24px;
}
.cancelOption {
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: right;
  line-height: 30px;
  font-size: 18px;
  color: #999;
}


//选择框位置
.category {
  margin-bottom: 16px;
  &:nth-child(3){
    margin-bottom:0;
  }
  .categoryTitle {
    margin-bottom: 6px;
    
  }
}


.scode {
  font-size:14px;
  display:flex;
  align-items: center;
  justify-content: flex-end;
  padding-left:18px;
  span{
    line-height: 24px;
    color:#666;
    padding-right: 8px;
  }
  
}

//添加选项框
.scoreOption{
  margin-left:7px;
}
.scoreLetter{
  margin-left:18px;
  font-size: 16px;
  line-height: 32px;
  text-align: right;
}

.blankScode {
  font-size:14px;
  display:flex;
  align-items: center;
  margin-top:16px;
  span{
    line-height: 24px;
    color:#666;
    margin-right: 12px;
  }
}