
.item {
  // border:1px solid red;
  // overflow: hidden;
  border-radius:6px;
  width: 164px;
  height: 132px;
  color: white;
  background: grey;
  position: relative;
  & .icon {
    z-index: 100;
    font-size: 24px;
    position: absolute;
    margin: auto;
    color: #40a9ff;
    font-size: 20px;
    left: 50%;
    bottom: 0%;
    transform: translate(-50%, 0);
    transition: font-size 0.2s ease;
    &:hover {
      font-size: 24px;
      cursor: pointer;
      color: #40a9ff;
    }
  }

  .department{
    margin:0px auto;
    border-top-left-radius:6px;
    border-top-right-radius:6px;
    width: 164px;
    height: 32px;
    line-height: 32px;
    background-color:#40a9ff;
    transition:background-color  1s;
    -moz-transition:background-color 1s; /* Firefox 4 */
    -webkit-transition:background-color 1s; /* Safari and Chrome */
    -o-transition:background-color 1s; /* Opera */
    color:white;
    text-align:center;
    &:hover{
      background-color: #69c0ff;
    }
  }

  .info{
    z-index:100;
    margin:0 auto;
    border:1px solid #40a9ff;
    border-bottom-left-radius:6px;
    border-bottom-right-radius:6px;
    width: 164px;
    height: 100px;
    background:white;
    color:black;
    text-align:center;
    transition:border  1s, height  0.3s;
    -moz-transition:border 1s, height  0.3s; /* Firefox 4 */
    -webkit-transition:border 1s, height  0.3s; /* Safari and Chrome */
    -o-transition:border 1s, height  0.3s; /* Opera */
      &:hover{
        border:1px solid #ffec3d;
        // height: 68px;
        border-bottom-left-radius:0px;
        border-bottom-right-radius:0px;
      }
  }

  .popup{
    margin:0px auto;
    margin-top:-32px;    
    color:white;
    z-index:1;
    width: 164px;
    height: 32px;
    // text-align:center;
    // position: relative;
    background-color:transparent;
    transition:background-color  0.7s;
    -moz-transition:background-color 0.7s; /* Firefox 4 */
    -webkit-transition:background-color 0.7s; /* Safari and Chrome */
    -o-transition:background-color 0.7s; /* Opera */
    border-bottom-left-radius:6px;
    border-bottom-right-radius:6px;  
    display:flex;
    justify-content:space-between;
    align-items: center;
    position: relative;
    padding:0 8px;
    &:hover{
      background-color:#8c8c8c;
      // margin-top:-32px;
    }
    .plus{
      margin: 0px;
      color:white;
      font-size:22px;
      height: 36px;
      width: 40px;
      // border: 1px solid red;
      text-align: center;
      z-index: -11;
      &:hover{
        cursor:pointer;
      }
    }
    & .popupAttr{
      border-radius: 6px;
      position: absolute;
      top: 32px;
      left: 0px;
      width: 100%;
      background: white;
      box-shadow: 0 0 2px 1px #bfbfbf;
      padding: 4px 0px;
      color: black;
      visibility: hidden;   
      & .popupAttrMenu{
        text-indent: 12px;
        color: #595959;
        font-size: 13px;
        line-height: 30px;
        &:hover{
          background: #e6f7ff;
        }
      }
    }
    .add{
      // height: 80px;
      // visibility: hidden;    
    }
    .modify{
      // visibility: hidden;
    }
  }

}