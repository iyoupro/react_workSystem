@import '~antd/lib/style/themes/default.less';
.wrapper {
  width: 100%;
  height: 100%;
  & > .dustbin {
    display: flex;
    flex-wrap: nowrap;
    width: 100%;
    height: 100%;
    font-size: 16px;
    background: #fafafa;
    & > .formComponentLib {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 20%;
      height: 75%;
      background: #fff;
      // box-shadow: 1px 1px 1px 1px grey;
      border-radius: 4px;
      border:1px solid #d9d9d9;
      margin: 12px 0;
      & > .operationPanel {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        margin: 12px 0px;
        & > .radio {
        };
        & > .select {
        };
      }
      & > .libArea {
        width: 90%;
        height: 60%;
        background: greenyellow;
      }
    };
    & > .formDesignArea {
      width: 60%;
      height: 90%;
      margin: 12px 36px;
      background: #fff;
      border: 1px solid #d9d9d9;
    };
    & > .itemAttributePanel {
      width: 15%;
      height: 90%;
      margin: 12px 0;
      background: #fff;
      border: 1px solid #d9d9d9;
    }
  };
}

.item {
  width: 40%;
  height: 60px;
  margin: 8px;
  border: 1px solid red;
  background: white;
  &.dragging {
   background: red; 
  };
  &.preview {
   background: blue; 
  };
  &.placed {
    background: green; 
  };
}