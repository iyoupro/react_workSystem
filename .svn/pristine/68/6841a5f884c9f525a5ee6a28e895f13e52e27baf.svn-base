.sortList {
  width: 300px;
  min-height: 120px;
  background: lightgrey;
  user-select: none;
  &.dragging {
    background: #bae7ff;
  }
  & > .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 95%;
    height: 40px;
    border-radius: 2px;
    padding: .5rem 1rem;
    margin: .5rem 0;
    background-color: #f5f5f5;
    cursor: pointer;
    &.dragging {
      opacity: 0.3;
    }
    &.selected {
      border: 1px solid #1890ff;
      color: #1890ff;
      border-radius: 2px;
    }
    &.dragged {
      background: yellow;
    }
    & > .dragHandle {
      cursor: move;
    }
    & > .count {
      position: absolute;
      top: -11px;
      right: -16px;
      width: 24px;
      height: 24px;
      line-height: 24px;
      text-align: center;
      border-radius: 50%;
      background: #ff7875;
      color: white;
      font-size: 16px;
    }
  }
}