.wrapper{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  & > .chooseLine {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    position: relative;
    margin: 8px 0 0 0;
    width: 100%;
    height: 33px;
    color: #000;
    overflow: visible !important;
    &:hover {
      &.selected {
        background: #e6f7ff;
        border-radius: 4px;
      };
      & .closeIcon {
        opacity: 1;
      };
    };
    & > span:nth-child(1) {
      margin: 2px 0;
      padding: 0;
    };
    & > span:nth-child(2) {
      width: 100%;
    };
    & .optionInputWrapper {
      width: calc(~'100% - 100px');
      & .optionInput {
        font-size: 16px;
        text-overflow: ellipsis;
      }
      & .focusUnderline {
        background: #722ed1;
      };
    };
    & .scoreInput {
      position: absolute;
      width: 54px;
      right: 32px;
      top: 0px;
    };
    & .score {
      position: absolute;
      right: 30px;
      top: 4.5px;
      color: #ffc53d;
    }
    & .closeIcon {
      position: absolute;
      transition: all 0.3s ease;
      cursor: pointer;
      font-size: 16px;
      line-height: 32px;
      width: 32px;
      top: 3.5px;
      right: 2px;
      opacity: 0;
      &:hover {
        color: rgba(0, 0, 0, 0.6);
        transform: scale(1.1);
      };
    };
  };
  
  & .chooseAdd{
    margin-right: 20px;    
    &:hover{
      // outline: dashed;
      cursor: pointer;
      color: gray;
      border-bottom:1px dashed #000;
    };
  }

} 