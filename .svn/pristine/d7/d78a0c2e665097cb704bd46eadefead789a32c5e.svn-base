.wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 0;
  height: 100%;
  width: 100%;
  & > .content {
    position: absolute;
    top: 30px;
    bottom: 0px;
    width: 100%;
    overflow: auto;
  }
}
.nav {
  width: 100%;
  float: left;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 30px;
  box-shadow: -1px -1px 7px 0px #000;
  z-index: 2;
  & li {
    display: inline;
    margin-right: 5px;
    padding: 5px;
  }
}