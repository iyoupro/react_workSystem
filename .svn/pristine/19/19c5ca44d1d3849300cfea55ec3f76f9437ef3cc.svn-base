.container {
  min-height: 40px; 
  overflow: 'auto';
  display: 'flex';
  flex-wrap: 'wrap';
  align-content: 'flex-start';
}

.item {
  width: 300px;
  height: 40px;
  border-radius: 2px;
  padding: .5rem 1rem;
  margin-bottom: .5rem;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  &.AreaItemNotDragging:hover {
    background-color: #e6f7ff;
  }
  &.dragging {
    opacity: 0.3;
  }
  &.selected {
    border: 1px solid #1890ff;
    color: #1890ff;
    border-radius: 2px;
  }
  &.dropPreview {
    background: #bae7ff;
    border: 1.4px dashed #1890ff;
    // transition: 1s;
    // box-shadow: 0px 0px 30px 0px #1890ff;
  }
  &.placeholder {
    // background: #5cdbd3;
  }
}

.topBox {
  // border: 1px solid gray;
  font-size: 13px;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  align-items: center; // justify-content: center;
  padding-left: 10px;
  .aaa {
    display: none;
    margin-left: 5px;
  }
  &:hover {
    background: #e8e8e8;
    .aaa {
      display: block;
    }
  }
  ;
  &.dragging {
    opacity: 0.3;
  }
  ;
  &.selected {
    // border: 1px solid red;
    background: #096dd9;
  }
  ;
  &.dropPreview {
    background: #d9f7be;
    border: 1px dashed black;
  }
  ;
  &.draggedOverSelf {
    background: #ff7875;
  }
  ;
  &.placeholder {
    background: #5cdbd3;
  }
  transition: all 0.3s ease;
}