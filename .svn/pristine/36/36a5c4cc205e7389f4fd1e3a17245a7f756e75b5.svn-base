.wrapper {
  padding: 1px;
  position: relative;
  & > .input {
    width: 100%;
    height: 100%;
    padding: 0;
    background: transparent;
    border: none;
    &:focus {
      padding: 0;
      box-shadow: none;
    };
  };

  & > .underline {
    margin-top: -4px;
    transition: all 0.5s ease;
    transform: scale(0);
    &.focus {
      transform: scale(1);
    }
  };

  & > .widthCal {
    position: absolute;
    white-space:nowrap;
    visibility: hidden;
  }
};