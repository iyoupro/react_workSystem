//修改新增弹出框的样式
:global {
  .popup {
    position: absolute;
    display: none;
    align-items: center;
    width: auto;
  }
  .popup-content-flowChart {
    background: transparent;
    margin-left: 7px;
    height: 100%;
    // border: 1px solid rgb(163, 162, 162);
    box-shadow: 0 0 3px rgb(140, 140, 140);
    border-radius: 10%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .popup-content-menu {
    opacity: 0.5;
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 33%;
    background: transparent;  
    color: black;  
    &:hover {
      opacity: 1;
      background-color: #e6f7ff;   
    }
  }
} 