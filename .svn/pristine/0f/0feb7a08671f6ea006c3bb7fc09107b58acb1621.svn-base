.wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 8px;
  background: #f5f5f5;
  & > .header {
    width: 100%;
    height: 100px;
    padding: 20px;
    box-sizing:border-box;
    background: #722ed1;
    box-shadow: -1px -1px 7px 0px #000;
    z-index: 20;
    overflow: hidden;
    & .title {
      font-size: 28px;
      margin-left: 10%;
      & .titleInput {
        color: white;
        font-size: 28px;
        font-weight: 600;
      }
      & .titleFocusUnderline {
        background: white;
      };
    };
  };
  & > .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    bottom: 0px;
    padding-bottom: 120px;
    background: #f5f5f5;
    & > ol:nth-child(1) {
      margin-top: -24px;
    }
    & > ol + ol {
      margin-top: 10%;
    }
  };
  & > .affix {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 30%;
    right: calc(~"20% - 80px");
    width: 56px;
    height: fit-content;
    border-radius: 4px;
    background: white;
    box-shadow: 0px 0px 5px 0.5px grey;
    & button {
      margin: 6px;
    }
  }
  
  & > .toTop {
    position: fixed;
    bottom: 20px;
    right: 40px
  }
}

.modalWrapper {
  & > .modalItemWrapper {
    display: flex;
    align-items: center;
    width: 100%;
    height: 44px;
    margin-bottom: 24px;
    font-size: 20px;
    box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.4), 1px 1px 2px 0px rgba(0, 0, 0, 0.4);
    cursor: move;
    &.dragging {
      background: #e6f7ff;
    }
    &:hover {
      background: #e6f7ff;
    }
    & > .modalItemIcon {
      margin: 0 12px;
    }
  }
}