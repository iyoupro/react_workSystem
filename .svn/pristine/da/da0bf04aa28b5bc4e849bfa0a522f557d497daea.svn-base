.wrapper {
  display: flex;
  align-items: center;
  position: relative;
  height: fit-content;
  width: fit-content;
  transition: all 1s ease;
}
.canvas {
  position: absolute;
  background: transparent;
  width: 100%;
  height: 100%;
}

.item {
  max-width: 0px;
  max-height: 0px;
  transition: all 1s ease;
  position: relative;
  opacity: 0;
  transform: scale(0);
  &.show {
    max-width: 9999px;
    max-height: 9999px;
    opacity: 1;
    transform: scale(1);
  }
}

.childWrapper {
  display: flex;
}