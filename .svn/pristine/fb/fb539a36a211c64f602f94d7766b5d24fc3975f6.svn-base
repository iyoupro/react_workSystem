.ruleWrapper {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  position: relative;
  width: 95%;
  height: 50px;
  background: #fafafa;
  border: 1px solid #d9d9d9;
  margin: 10px 1% 10px 4%;
  border-radius: 4px;
  padding-left: 3%;
  &:hover {
    & > .deleteIcon > .button {
      display: block;
    }
  }
  & > .horizontalLine {
    position: absolute;
    background: black;
    top: calc(~"50% - 0.5px");
    left: -2.1%;
    width: 1.7%;
    height: 1px;
    margin-block-start: 0;
    z-index: 0;
  }
  & > .deleteIcon{
    position: absolute;
    right: 0.5%; 
    & > .button {
      border:0px;
      display: none;
      background: #fafafa;
    }  
  }

}