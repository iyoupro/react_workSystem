
.item {
  // border:1px solid red;
  border-radius:6px;
  width: 164px;
  height: 132px;
  color: white;
  background: grey;
  position: relative;
  & .icon {
    color: blue;
    font-size: 24px;
    position: absolute;
    margin: auto;
    color: black;
    font-size: 20px;
    left: 50%;
    bottom: 0%;
    transform: translate(-50%, 0);
    transition: font-size 0.2s ease;
    &:hover {
      font-size: 24px;
      cursor: pointer;
      color: red;
    }
  }
}