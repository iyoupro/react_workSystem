.wrapper{
  width: 100%;
  display: flex;
  padding-bottom: 12px;
  flex-wrap: wrap;
  & .chooseLine{
    padding: 4px 0;
    display: flex;
    position: relative;
    margin-left: 0px;
    width: 100%;
    color: #000;
    &:hover {
      &.selected {
        background: #e6f7ff;
        border-radius: 4px;
      }
      & .closeIcon {
        opacity: 1;
      }
    }
    &  span:nth-child(1){
      width: 16px;
      & span{
        margin:4px 0;
      }
    }
    &  span:nth-child(2){
      width: 100%;
      cursor: pointer;
    }
    & .option{
      text-overflow: ellipsis;
    }
    & .optionWrapper{
      width: 82%;
    }
    & .closeIcon {
      transition: all 0.3s ease;
      cursor: pointer;
      font-size: 16px;
      line-height: 32px;
      width: 32px;
      position: absolute;
      top: 5px;
      right: 8px;
      opacity: 0;
      &:hover {
        color: rgba(0, 0, 0, 0.6);
        transform: scale(1.1);
      }
    }
  };
  
  & .chooseAdd{
    margin-right: 20px;    
    &:hover{
      // outline: dashed;
      cursor: pointer;
      color: gray;
      border-bottom:1px dashed #000;
    };
  }

} 