.ruleWrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  width: 96%;
  height: 50px;
  background: #fafafa;
  border: 1px solid #d9d9d9;
  margin: 10px 1% 10px 3%;
  border-radius: 4px;
  padding-left:3%;
  & .deleteIcon{
    display: none;
    position: absolute;
    right: 0.5%; 
    & .button {
      border:0px;
      background: #fafafa;
    }  
  }

}