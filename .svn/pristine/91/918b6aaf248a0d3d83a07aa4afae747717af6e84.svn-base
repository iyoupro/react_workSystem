.container {
  min-height: 300px;
  width: '100%';
  overflow: 'auto';
  display: 'flex';
  flex-wrap: 'wrap';
  align-content: 'flex-start';
}

.item {
  padding: .5rem 1rem;
  margin-bottom: .5rem;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  &.hovered {
    background-color: #e8e8e8;
  }
  &:hover {
    background-color: #e9e9e9;
  }
  &.dragging {
    opacity: 0.3;
  }
  &.selected {
    // border: 1px solid red;
    background: #096dd9;
  }
  &.preView {
    background: #d9f7be;
    border: 1px dashed black;
  }
  &.draggedOverSelf {
    background: #ff7875;
  }
  &.placeholder {
    background: #5cdbd3;
  }
}

.topBox {
  // border: 1px solid gray;
  font-size: 13px;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  align-items: center; // justify-content: center;
  padding-left: 10px;
  .aaa {
    display: none;
    margin-left: 5px;
  }
  &:hover {
    background: #e8e8e8;
    .aaa {
      display: block;
    }
  }
  ;
  &.dragging {
    opacity: 0.3;
  }
  ;
  &.selected {
    // border: 1px solid red;
    background: #096dd9;
  }
  ;
  &.preView {
    background: #d9f7be;
    border: 1px dashed black;
  }
  ;
  &.draggedOverSelf {
    background: #ff7875;
  }
  ;
  &.placeholder {
    background: #5cdbd3;
  }
  transition: all 0.3s ease;
}