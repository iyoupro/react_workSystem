.wrapper {
  width: 100px;
  height: 50px;
  background: #91d5ff;
  display: flex;
  align-items: center;
  margin: 10px;
  padding: 10px;
  border: 1px solid black;
  &.hover{
    background: red;
  }
  &.selected {
    border: 1px solid red;
    background: yellow;
  }
  transition: all 1s ease;
}