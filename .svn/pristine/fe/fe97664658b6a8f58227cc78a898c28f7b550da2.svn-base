.wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: fit-content;
  transition: all 1s ease;
  position: relative;
  &.head {
    margin: 0 auto;
  }
}
.canvas {
  position: absolute;
  background: transparent;
  width: 100%;
  height: 100%;
}

.item {
  visibility: hidden;
  max-width: 0px;
  max-height: 0px;
  transform: scale(0);
  transition: all 1s ease;
  position: relative;
  &.show {
    transform: scale(1);
    visibility: visible;
    max-width: 99999px;
    max-height: 99999px;
  }
}

.childWrapper {
  display: flex;
  flex-direction: row;
  justify-content: center;
}