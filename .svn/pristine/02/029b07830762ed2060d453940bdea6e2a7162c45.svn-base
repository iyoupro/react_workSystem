@import '~antd/lib/style/themes/default.less';
.wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
  font-size: 16px;
  background: #fafafa;
  & > .formComponentLib {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
    height: 75%;
    background: #fff;
    // box-shadow: 1px 1px 1px 1px grey;
    border-radius: 4px;
    // border:1px solid #d9d9d9;
    margin: 12px 0;
    margin-left: 24px;
    & > .operationPanel {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      margin: 12px 0px;
      width: 100%;
      & > .leftRadio {
        height: 70px;
        width: 100%;
        // border:1px solid red;
        & > .leftButton{
          height: 100%;
          width: 33.3%;
          text-align: center;
          line-height: 68px;
        }
      };
      & > .select {
        width: 33.3%;
        & :global(.ant-select-selection){
          margin-left: -2px;
          border-top-left-radius: 0;
          border-bottom-left-radius: 0;
          margin-top: -2px;
        }
      };
      & > .operation{
        width: 66.6%;
        margin-top: -2px;
        & > .undoOperation{
          width: 50%;
        };
        & > .redoOperation{
          width: 50%;
          border-radius: 0px;
        };
      };
    }
    & > .libArea {
      width: 90%;
      height: 60%;
      // background: greenyellow;
    }
    & > .dustbin2 {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 108px;
      width: 100%;
      height: 30%;
      background: lightgrey;
      cursor: pointer;
    }
  };
  & > .formDesignArea {
    width: 60%;
    height: 90%;
    margin: 12px 36px;
    background: #fff;
    border: 1px solid #d9d9d9;
  };
  & > .itemAttributePanel {
    width: 15%;
    height: 90%;
    margin: 12px 0px;
    margin-right: 24px;
    background: #fff;
    padding: 14px;
    border: 1px solid #d9d9d9;
    & .lineHr{
      border: none;
      background-color: #e8e8e8;
      height: 1px;
      margin: 12px 0;
    }
    & .itemTitle{
      line-height: 44px;
      color: #262626;
      margin-bottom: 8px;
      border-bottom: 1px solid #e8e8e8;  
    }
    & .setSpecialItemWidth{
      font-size: 15px;
      margin-bottom: 4px;
      // border: 1px solid red;
    }
    & .rightRadio{
      width: 100%;
      & > .rightButton{
        width: 25%;
        text-align: center;
      }
    }
  }
}

.item {
  width: 50%;
  height: 42px;
  background: white;
  text-align: center;
  line-height: 42px;
  background: #f5f5f5;
  &.dragging {
   background: #d9d9d9; 
  };
  &.preview {
   background: #d9d9d9; 
  };
  &.placed {
    background: #e6f7ff; 
  };
  &.selected {
    border: 1px solid #d9d9d9;
  }
}

 
.itemComponents{
  position: relative;
  display: flex;
  align-items: center;
  width: 50%;
  height: 54px;
  padding: 0 4px;
  background: white;
  text-align: center;
  background: white;
  border: 1px solid #d9d9d9;
  &:hover{
    & .deleteIcon{
      display: inline-block;
    }
  }
  &.dragging {
   background: #d9d9d9; 
  };
  &.preview {
   background: #d9d9d9; 
  };
  &.placed {
    background: #e6f7ff; 
  };
  &.selected {
    border: 1px solid #1890ff;
  }
  & > .itemTitle{
    width: 30%;
    padding-right: 8px;
    text-align: right;
  }
  & .input{
    width: 50%;  
  }
  & .deleteIcon{
    position: absolute;
    margin-left: 90%;
    display: none;
    color: #8c8c8c;
    &:hover{
      font-size: 18px;
      color: #595959;      
    }
  }
}

.itemComponentsVertical{
  flex-direction: column;
  justify-content: center;
}

