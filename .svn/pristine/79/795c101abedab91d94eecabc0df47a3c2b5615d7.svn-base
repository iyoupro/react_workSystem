.wrapper {
  padding: 0 20px;
  width: 100%;
  background: white;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
  transition: transform 0.4s ease, max-height 0.4s ease, opacity 0.4s ease, box-shadow 0.4s ease;
  transform: scaleY(1);
  & .required{
    position: absolute;
    // font-weight: bold;
    left: 8px;
    color: red;
    font-size: 24px;
    // line-height: 36px;
    padding: 20px 4px 0 0;
  };
  &.delete {
    transform: scaleY(0);
    opacity: 0;
    max-height: 0 !important;
  };
  &.isSelected {
    box-shadow: 0px 0px 14px 0px rgba(0, 0, 0, 0.4), 2px 2px 9px 0px rgba(0, 0, 0, 0.4);
    z-index: 2;
    & > .footer {
      opacity: 1;
      height: 40px;
    }
  };
  & .title {
    text-indent: 4px;
    width: 80%;
    height:36px;
    margin: 16px 0;
    font-size: 28px;
    & .titleInput {
      bottom: 10%;
      font-size: 28px;
    }
  };

  & .typeSelect{
    width: 16%;
    height: 36px;
    margin-left: 2%;
    margin-top: 1%;
  };
  & .declaraction {
    width: 100%;
    height:36px;
    margin-bottom: 24px;
    font-size: 24px;
    & .declaractionInput {
      font-size: 24px;
    }
  };
  & > .horizontalLine{
    border: none;
    margin-top:12px;
    height: 1px;
    width: 100%;
    background-color: #d9d9d9;
  };
  & > .footer {
    // border: 1px solid red;
    width: 100%;    
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    transition: height 0.15s ease, opacity 0.4s ease;
    opacity: 0;
    height: 0px;
    & > .footerItem{
      margin-right: 1.5%;
      cursor: pointer;
    }
    & .deleteIcon {
      opacity: 1;
    }
  } 
}

