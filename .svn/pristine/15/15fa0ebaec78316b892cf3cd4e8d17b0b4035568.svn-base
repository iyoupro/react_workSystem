.wrapper {
  position: relative;
  & > .input {
    width: 100%;
    height: 100%;
    padding: 0;
    background: transparent;
    border: none;
    color: black;
    &:focus {
      padding: 0;
      box-shadow: none;
    };
  };
  & > .underline {
    width: 100%;
    height: 2px;
    margin-top: -4px;
    border: 0;
    background: transparent;
    border-top: 1px dashed grey;
    &.focusUnderLine {
      height: 2px;
      margin-top: -2px;
      border-top: 0;
      transition: all 0.5s ease;
      opacity: 0;
      transform: scale(0);
      &.focus {
        opacity: 1;
        transform: scale(1);
      };
    };
  };
  & > .widthCal {
    left: 0;
    top: 0;
    position: absolute;
    white-space: nowrap;
    visibility: hidden;
  };
};