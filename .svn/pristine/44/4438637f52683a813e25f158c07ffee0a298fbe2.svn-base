/** @format */
.wrapper {
  width: 100%;
  // display: flex;
  & .checkboxLine{
    display: flex;
    padding: 4px 0;   
    margin: 0; 
    position: relative;
    // border: 1px solid blue;
    &:hover{
      & .closeIcon{
        display: inline;
        // border: 1px dashed gray;
      }
    }
    & .closeIcon{
      cursor: pointer;
      font-size: 16px;
      line-height: 32px;
      // border:1px solid red;
      width: 32px;
      position: absolute;
      top: 0px;
      right: 20px;
      display: none;
    }
  }
  & .checkboxAdd:hover{
    // outline: dashed;
    cursor: pointer;
    color: gray;
    border-bottom:1px dashed #000;
  };
}
