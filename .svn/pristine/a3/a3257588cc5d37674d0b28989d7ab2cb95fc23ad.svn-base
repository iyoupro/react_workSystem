.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text {
  color: #333;
  font-size: 14;
  margin-left: 8px;
  line-height: 40px;
  display: inline-block;
  width: 92%;
  padding-right: 4px;
  border-bottom: 1px solid rgba(224, 224, 224, 0.5);
  margin-right: 17px;
}

.textContent {
  display: flex;
  justify-content: space-between;
  .deleteIcon {
    display: none;
    font-size: 20px;
    cursor: pointer;
    color: rgb(187, 187, 187);
  }
  &:hover {
    .deleteIcon {
      display: inline;
    }
  }
}