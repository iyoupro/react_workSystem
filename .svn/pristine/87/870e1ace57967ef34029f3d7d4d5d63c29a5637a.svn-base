.inputArea {
  position: relative;
  padding: 12px;
  background: #e5e5e5;
  & textarea:focus {
    margin-bottom: 36px;
  };
  & > .buttonArea {
    display: flex;
    justify-content: space-between;
    position: absolute;
    width: 100%;
    padding: 0 15px;
    right: 0px;
    bottom: 15px;
  };
};