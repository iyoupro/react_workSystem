.wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  width: 100%;
  height: 100%;
  background: yellowgreen;
  & .list {
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: auto;
    width: 400px;
    height: 700px;
    background: white;
    border: 1px solid black;
    & .item {
      width: 90%;
      height: 100px;
      background: #e6f7ff;
      box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.4), 1px 1px 2px 0px rgba(0, 0, 0, 0.4);
      margin: 0 0 24px 0;
    }
  }
}