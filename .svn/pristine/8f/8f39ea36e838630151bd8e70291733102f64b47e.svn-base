.componentLib {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 75%;
  background: #fafafa;
  box-shadow: 1px 1px 1px 1px grey;
  border-radius: 4px;
  // border: 1px solid #000;
  margin: 0 2.5%;
}

.buttonWrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 90%;
  height: 15%;
  // background: blue;
  border-bottom: 1px solid grey;
  margin-bottom: 5%;
}

.button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 30%;  
  height: 60%;
  box-shadow: 1px 1px 1px 1px grey;
  background: #1890ff;
  color: #fff;
  font-weight: bold;
  border-radius: 4px;
  transition: all 0.5s ease;
  &:hover {
    cursor: pointer;
    background: #40a9ff;
  }
}